---
Library Management System
---

classDiagram
    class User{
        +string firstName
        +string lastName
        +string fullName
        +int id
    }

    note for User "fullName should be derived from firstName and lastName"

    class Book{
        +title: string
        +author: string
        +isbn: string
        +isCheckedOut: boolean
        +checkoutCount: int
        +ratings: List~Rating~
        +history: List~Transaction~
        +usedISBN: Set~string~$
        +addToLibrary()
        +checkout()
        +return()
        +rate()
        +calculateAverageRating()
        +getTotalReviews()
        +getReviewsByMinimumRating()
        +getReviewsWithComment()
    }
    
    class Transaction{
        +type: string
        +date: Date
        +user: User
    }

    note for Transaction "type can be return or checkout"

    class Library{
        +books: List~Book~$
        +getOverdueBooks()$
        +getBooksByAuthor()$
        +getBookdsByTitle()$
        +sort()$
        +save()$
        +load()$
    }

    class Review{
        +rating: int
        +comment: string
        +user: User
    }

    Library "1" o-- "0..*" Book
    Review "0..*" o-- "1" User
    Book "1" *-- "0..1" Review
    Book "1" *-- "0..*" Transaction
    Transaction "0..*" o-- "1" User